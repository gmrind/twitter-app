<% provide(:title, "Change Password |") %>
<h2>Change your password</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Password", class: "form-control" %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confrim Password", class: "form-control" %>


    <%= f.submit "Change my password", class: "btn btn-primary" %>

<% end %>

    <br />
    | <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %> | |
    <%= link_to "Sign up now..!", new_user_registration_path %> |
  
  </div>
</div>
