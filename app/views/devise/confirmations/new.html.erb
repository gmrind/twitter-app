<% provide(:title, "Resend confirmation instructions |") %>

<h1>Resend confirmation instructions</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control', placeholder: "Enter Your Email Address" %> 

    <%= f.submit "Resend confirmation instructions", class: "btn btn-primary" %>

<% end %>


    <br />
    | <%= link_to "Forgot your password?", new_password_path(resource_name) %> | |
    <%= link_to "Sign up now..!", new_user_registration_path %> |
  
  </div>
</div>